@model National_Park_Blog.Models.Blog_Content
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <link href="/CSS/DetailsStyle.css" rel="stylesheet" />
    <link href="/CSS/FormsStyle.css" rel="stylesheet" />
</head>
<body>
    <div id="Details_Section">
        <h1>Blog Entry:</h1>
        <h2>@Model.BlogContentText</h2>
        <p>Author: <span>@Model.BlogContentName</span></p>
        <p>Blog Date: <span>@Model.BlogContentDate</span></p>
        <br />
        <a href="/Blog_Content_/Update/@Model.Id">Edit Review</a>
        <br />
        <a href="/Blog_Content_/Delete/@Model.Id">Remove Review</a>
        <br />
        <a href="/NationalParks/Index/">Return to All Blogs Page</a>
    </div>
</body>
</html>
