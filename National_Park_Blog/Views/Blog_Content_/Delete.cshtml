@model National_Park_Blog.Models.Blog_Content
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>


<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link href="/CSS/FormsStyle.css" rel="stylesheet" />
</head>

<div>
    <form asp-action="Delete" class="FormsStyle">
        <h1>Delete</h1>
        <h3 class="delete"> Are you sure you want to delete this?</h3>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BlogContentName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BlogContentName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BlogContentText)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BlogContentText)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BlogContentDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BlogContentDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NationalPark)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NationalPark.Id)
                </dd>
            </dl>

            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <input type="hidden" asp-for="NationalParkId" />
            <a href="/Blog_Content_/Details/@Model.Id">Back to Blog Details</a>
    </form>

</div>
